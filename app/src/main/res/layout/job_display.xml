<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_second"
    android:orientation="vertical">


    <TextView
        android:id="@+id/job_title"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:text="This is an example"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/job_deadline"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_access_time_24"
        android:layout_marginTop="10dp"
        android:text="Random shit"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/job_title"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/job_price"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@id/job_deadline"
        android:text="no money "
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:layout_height="wrap_content"/>
</RelativeLayout>