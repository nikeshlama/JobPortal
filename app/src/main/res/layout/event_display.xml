<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="25dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileImage1"
        android:src="@drawable/jobportal"
        android:layout_width="60dp"
        android:layout_marginLeft="20dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/proUsername1"
        android:text="Nikesh lama "
        android:layout_toRightOf="@+id/userProfileImage1"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/countryName1"
        android:text="Nepal"
        android:layout_width="wrap_content"
        android:layout_below="@id/proUsername1"
        android:textSize="12dp"
        android:layout_toRightOf="@id/userProfileImage1"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/eventContent1"
        android:layout_marginTop="10dp"
        android:text="@string/title_content"
        android:layout_width="match_parent"
        android:layout_below="@id/userProfileImage1"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ContentImage1"
        android:src="@drawable/welcome"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_below="@id/eventContent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/likeCountText"
        android:layout_below="@id/ContentImage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:background="#FAFAFA"
    android:layout_marginBottom="25dp"
    android:layout_below="@id/likeCountText"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/likeLayout"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <ImageView
                android:id="@+id/btnLike1"
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_blue0thumb_up_24"
                android:layout_height="30dp"/>
            <TextView
                android:text="Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <ImageView
                android:id="@+id/btnComment1"
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_message_24"
                android:layout_height="30dp"/>
            <TextView
                android:text="Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>

</RelativeLayout>